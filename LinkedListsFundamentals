using System;
using System.Collections.Generic;
using System.Linq;

class MainClass {
    static void Main() {
        
        // Instantiating the linked list
        LinkedList<int> myLinkedList = new LinkedList<int>();
        myLinkedList.AddLast(10);
        
        // To instantiate a new node & find an value in the linked list
        LinkedListNode<int> myLinkedListNode = myLinkedList.Find(10);
        
        // To add after the first node
        myLinkedList.AddAfter(myLinkedListNode, 11);
        
        //To remove the first node
        myLinkedList.RemoveFirst();
        
        // To count the number of items in a linked list
        Console.WriteLine($"My Linked List contains {myLinkedList.Count()} elements");
        
        // Going through the linked list items and count
        foreach(var item in myLinkedList)
        {
            Console.WriteLine($"My linked List contains {item}");
        }
    }
}
